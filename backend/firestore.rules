rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to hadiths for all users
    match /hadiths/{hadithId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
      allow delete: if request.auth != null; // Only authenticated users can delete
    }
    
    // Allow read access to daily hadith schedule
    match /dailyHadithSchedule/{scheduleId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
      allow delete: if request.auth != null; // Only authenticated users can delete
    }
    
    // Allow read access to user collections
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow read access to saved hadiths
    match /savedHadiths/{savedId} {
      allow read, write: if request.auth != null;
    }
  }
}
